pkgname=maramake
pkgver=20221118
_version=2022-11-18
pkgrel=0
pkgdesc="An implementation of POSIX make"
url="https://maradns.samiam.org/maramake/"
arch="all"
license="Public Domain"
makedepends=""
source="https://maradns.samiam.org/maramake/maramake-$_version.tar.gz"
builddir="$srcdir/$pkgname-$_version"
options="!check"

build() {
	make PREFIX=/usr
}

package() {
	mkdir -p "$pkgdir/usr/bin"
	cp -f maramake "$pkgdir/usr/bin"
}

