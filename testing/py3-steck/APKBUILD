# Contributor: kurth4cker <kurth4cker@gmail.com>
# Maintainer: kurth4cker <kurth4cker@gmail.com>
pkgname=py3-steck
_pkgreal=steck
pkgver=0.7.0
pkgrel=0
pkgdesc="Client for pinnwand pastebin."
url="http://packages.python.org/pypi/steck"
arch="noarch"
license="MIT"
subpackages="$pkgname-pyc"
depends="python3
	py3-toml
	py3-appdirs
	py3-click
	py3-requests
	py3-magic
	py3-termcolor
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
options="!check"
source="https://files.pythonhosted.org/packages/19/05/1101ab6c5f37ae0c275934f80c973c1aeb75c3e736df47bf042ebd22615f/steck-$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer \
		-d "$pkgdir" \
		dist/*.whl
}

sha512sums="
62f9219d12f4d56bcce619d8244384c38168b4918aa38e48c1d9ea2a02cbdafc16695a9001ed5d7d84cb79d8b7c9947fe5a6c725c6178d26e67f74133216697d  steck-0.7.0.tar.gz
"
